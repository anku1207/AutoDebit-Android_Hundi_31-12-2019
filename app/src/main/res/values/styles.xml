<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/appbar</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- <item name="android:textColorHint">@color/white</item>-->
        <!--<item name="colorControlNormal">#4CAF50</item>
        <item name="colorControlActivated">#3A32AD</item>
        <item name="colorControlHighlight">@color/colorAccent</item>-->
    </style>


    <style name="AppThemeNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="fullscreen" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <!-- <item name="colorPrimary">@color/colorPrimary</item>
         <item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->

    </style>


    <style name="popup" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- &lt;!&ndash; Customize your theme here. &ndash;&gt;-->
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <!--  <item name="android:background">#FFFF</item-->>

    </style>


    <style name="inputIcons">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:tint">#a6d3d3d3</item>
    </style>

    <style name="inputRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingRight">5dp</item>

    </style>

    <style name="pin_edittext_style">
        <item name="android:gravity">center</item>
        <!--<item name="android:cursorVisible">false</item>-->
        <item name="android:maxLength">1</item>
        <item name="android:minEms">2</item>
        <item name="android:inputType">number</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>


    <style name="TextLabel" parent="@android:style/TextAppearance">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#3A32AD</item>
    </style>

    <style name="error_appearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">#E71212</item>
        <item name="android:textSize">12sp</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="AutodebitTextHintAppearance" parent="@android:style/TextAppearance">
        <item name="android:textColorHint">@color/grey</item>
    </style>

    <style name="AutodebitTextHintAppearanceWhitecol" parent="@android:style/TextAppearance">
        <item name="android:textColorHint">@color/white</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">

        <item name="android:tint">@color/appbar</item>
        <item name="drawerArrowStyle">@style/DrawerHamburgerStyle</item>

    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">

    </style>

    <style name="DrawerHamburgerStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/appbar</item>
    </style>


    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@android:anim/slide_in_left</item>
        <item name="android:windowExitAnimation">@android:anim/slide_out_right</item>
    </style>


    <style name="edittext" parent= "">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <!--<item name="android:drawableLeft">@drawable/mobile</item>
        <item name="android:paddingLeft">10dp</item>-->
        <item name="android:singleLine">true</item>
        <item name="android:fontFamily">@font/poppinsmedium</item>
        <item name="android:inputType">number|textVisiblePassword</item>
        <item name="android:digits">@string/NumberDigits</item>
        <item name="android:maxLines">1</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textStyle">bold</item>

       <!-- <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/appbar</item>
        <item name="colorControlHighlight">@color/black</item>-->
    </style>
    
    
    <style name="commonEdittextStyle">
        <item name="android:drawablePadding">4dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:fontFamily">@font/poppinsmedium</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="commonSubTitelStyle">
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">15dp</item>
        <item name="android:fontFamily">@font/poppinsmedium</item>
    </style>




    <!--confirmation dialog-->
    <style name="confirmation_dialog_layout">
        <item name="android:layout_width">match_parent</item>
         <item name="android:layout_height">wrap_content</item>
         <item name="android:orientation">horizontal</item>
         <item name="android:layout_gravity">center</item>
         <item name="android:layout_marginTop">10dp</item>

    </style>



    <style name="confirmation_dialog_filed">
        <item name="android:textAlignment">textEnd</item>
        <item name="android:fontFamily">@font/poppinssemibold</item>
    </style>
    <style name="confirmation_dialog_value">
        <item name="android:textAlignment">textStart</item>
        <item name="android:fontFamily">@font/poppinssemibold</item>

    </style>

    <style name="confirmation_dialog_text_flied">
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/poppinssemibold</item>
        <item name="android:textSize">15dp</item>

    </style>




    <style name="cardview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardElevation">7dp</item>
        <item name="cardCornerRadius">15dp</item>
        <item name="android:layout_margin">10dp</item>
    </style>





</resources>
