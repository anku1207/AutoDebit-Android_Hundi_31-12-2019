<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.uav.autodebit.Activity.PanVerification"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_gravity="center"
    android:background="@drawable/paynimo_view_rounded_corner"
    android:layout_marginBottom="?attr/actionBarSize"
    android:layout_marginTop="?attr/actionBarSize"
    >
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"

        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            >

            <TextView
                android:id="@+id/title_text"
                style="@style/TextViewPaynimo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textSize="16dp"
                android:fontFamily="@font/poppinslight"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:textColor="@color/appbar"
                android:paddingTop="10dp"
                />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="7dp"
                android:layout_margin="10dp"
                app:cardCornerRadius="15dp"
                >
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/usericon"
                    android:backgroundTint="@color/white"
                    android:hint="Customer Name"
                    android:drawablePadding="10dp"
                    android:singleLine="true"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/customername"
                    android:maxLength="75"
                    android:inputType="textCapWords"
                    android:fontFamily="@font/poppinslight"
                    android:text=""
                    android:maxLines="1"
                    android:digits="@string/NameDigits"
                    />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="7dp"
                android:layout_margin="10dp"
                app:cardCornerRadius="15dp"
                >
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/mobile"
                    android:backgroundTint="@color/white"
                    android:hint="Phone Number"
                    android:drawablePadding="10dp"
                    android:singleLine="true"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/mobilenumber"
                    android:maxLength="10"
                    android:fontFamily="@font/poppinslight"
                    android:text=""
                    android:maxLines="1"
                    android:digits="@string/NumberDigits"
                    android:inputType="number"

                    />
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="7dp"
                android:layout_margin="10dp"
                app:cardCornerRadius="15dp"
                >
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/address"
                    android:backgroundTint="@color/white"
                    android:hint="Address"
                    android:drawablePadding="10dp"
                    android:singleLine="true"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/permanentaddress"
                    android:fontFamily="@font/poppinslight"
                    android:text=""
                    />
            </androidx.cardview.widget.CardView>






            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="7dp"
                android:layout_margin="10dp"
                app:cardCornerRadius="15dp"

                >
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/pin"
                    android:backgroundTint="@color/white"
                    android:hint="PIN"
                    android:drawablePadding="10dp"
                    android:singleLine="true"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/pin"
                    android:maxLength="6"
                    android:fontFamily="@font/poppinslight"
                    android:text=""
                    android:digits="@string/NumberDigits"
                    />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    app:cardElevation="7dp"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="15dp"
                    >
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/pin"
                        android:backgroundTint="@color/white"
                        android:hint="City"
                        android:drawablePadding="10dp"
                        android:singleLine="true"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/city"
                        android:enabled="false"
                        android:fontFamily="@font/poppinslight"
                        />
                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    app:cardElevation="7dp"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="15dp"

                    >
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/stateicon"
                        android:backgroundTint="@color/white"
                        android:hint="State"
                        android:drawablePadding="10dp"
                        android:singleLine="true"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/state"
                        android:enabled="false"
                        android:fontFamily="@font/poppinslight"
                        />
                </androidx.cardview.widget.CardView>
            </LinearLayout>


            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/verify"
                android:text=""
                android:layout_marginBottom="30dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/cornerbutton"
                android:textColor="@color/white"
                android:textAllCaps="false"

                />



        </LinearLayout>

    </androidx.core.widget.NestedScrollView>



</LinearLayout>