<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.uav.autodebit.Activity.PanVerification"
    android:orientation="vertical"
    android:background="@color/activitybackground"
    >
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/my_awesome_toolbar"
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:background="@color/appbar"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        app:contentInsetRight="0dp"
        app:contentInsetEnd="0dp">
        <ImageView
            android:id="@+id/back_activity_button"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:scaleType="center"
            android:src="@drawable/rof_backbutton"
            android:textStyle="bold"
            android:tint="@color/white"
            />
        <LinearLayout
            android:id="@+id/saveshipmenticonintop"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:background="@color/appbar"
            android:orientation="vertical"
            android:padding="@dimen/pin_content_layout_padding">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="15dp"
                android:paddingBottom="0dp"
                android:tint="@color/white" />
        </LinearLayout>

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:fontFamily="@font/poppinsbold"
            android:gravity="center"
            android:text="History Summary"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"

            />
    </androidx.appcompat.widget.Toolbar>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/main"
        android:visibility="visible"
        >

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:background="@color/white"
          android:padding="10dp">
          <LinearLayout
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:orientation="vertical">

              <TextView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text=""
                  android:textSize="16dp"
                  android:ellipsize="end"
                  android:maxLines="1"
                  android:textAlignment="textStart"
                  android:textStyle="bold"
                  android:layout_marginBottom="5dp"
                  android:textColor="@color/black"
                  android:id="@+id/service_name"

                  />

              <TextView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text=""
                  android:textSize="16dp"
                  android:ellipsize="end"
                  android:maxLines="1"
                  android:textAlignment="textStart"
                  android:textStyle="bold"
                  android:layout_marginBottom="5dp"
                  android:textColor="@color/black"
                  android:id="@+id/number"
                  />
            <TextView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text=""
                  android:textSize="13dp"
                  android:ellipsize="end"
                  android:maxLines="1"
                  android:textAlignment="textStart"
                  android:textStyle="bold"
                  android:layout_marginBottom="5dp"
                  android:id="@+id/order_id"

                  />
          </LinearLayout>

          <LinearLayout
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight=".3"
              android:orientation="vertical"
              android:layout_gravity="right"
              android:gravity="right">

              <ImageView
                  android:layout_width="50dp"
                  android:layout_height="50dp"
                  android:id="@+id/service_Icon"
                  android:layout_gravity="center"
                  >
              </ImageView>

              <TextView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text=""
                  android:textSize="12dp"
                  android:ellipsize="end"
                  android:maxLines="1"
                  android:textAlignment="center"
                  android:textStyle="bold"
                  android:layout_marginBottom="5dp"
                  android:textColor="@color/black"
                  android:id="@+id/status"

                  >
              </TextView>
          </LinearLayout>

      </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Payment Summary"
            android:id="@+id/tvPS"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textSize="15dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/payment_amt_date"
            android:background="@color/white"
            android:padding="10dp">
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Payment Detail"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textSize="15dp">
        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/payment_detail_Layout"
            android:background="@color/white"
            android:padding="10dp">
        </LinearLayout>
    </LinearLayout>
</ScrollView>
</LinearLayout>


