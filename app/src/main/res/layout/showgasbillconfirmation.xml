<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/paynimo_view_rounded_corner"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:gravity="center"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:paddingTop="20dp"
            android:text="Gas"
            android:id="@+id/heading"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"/>

        <LinearLayout
            android:paddingBottom="10dp"
            android:padding="20dp"
            android:weightSum="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/prepaid_ly"
                android:orientation="vertical"
                android:padding="10dp"
                android:layout_weight=".5"
                android:text="PrePaid"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_width="0dp">

                <ImageView
                    android:scaleType="fitCenter"
                    android:src="@drawable/gas"
                    android:gravity="center"
                    android:layout_height="100dp"
                    android:layout_width="100dp"/>

                <TextView
                    android:id="@+id/prepaidclick"
                    android:text="Gas Cylinder"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/postpaid_lay"
                android:orientation="vertical"
                android:padding="10dp"
                android:layout_weight=".5"
                android:text="PrePaid"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_width="0dp">

                <ImageView
                    android:scaleType="fitCenter"
                    android:src="@drawable/gauge"
                    android:gravity="center"
                    android:layout_height="100dp"
                    android:layout_width="100dp"/>


                <TextView
                    android:gravity="center"
                    android:id="@+id/postpaidclick"
                    android:text="PNG"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </TextView>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>