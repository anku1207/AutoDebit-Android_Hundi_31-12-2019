<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/paynimo_view_rounded_corner"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dialog_one_tv_title"
        style="@style/TextViewPaynimo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text=""
        android:textSize="20dp"
        android:textColor="@color/appbar"
        android:layout_gravity="center"
        />

    <TextView
        android:id="@+id/dialog_one_tv_text"
        style="@style/TextViewPaynimo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:text=""
        android:gravity="center_horizontal"
        android:textSize="15dp"
        android:textAlignment="center"
        android:layout_centerInParent="true"/>
    <RelativeLayout
        android:id="@+id/dialog_button_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/button1"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:background="@drawable/paynimo_button_background"
            android:padding="5dp"
            android:text="@string/paynimo_custom_dialog_ok_label"
            android:textColor="#ffffff"
            android:textSize="12sp"
           />

        <Button
            android:id="@+id/button2"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/paynimo_button_background"
            android:padding="5dp"
            android:text="@string/paynimo_custom_dialog_ok_label"
            android:textColor="#ffffff"
            android:textSize="12sp"/>
    </RelativeLayout>

</LinearLayout>