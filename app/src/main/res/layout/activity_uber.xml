<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.uav.autodebit.Activity.PanVerification"
    android:orientation="vertical"
    >


    <android.support.v7.widget.Toolbar
        android:id="@+id/my_awesome_toolbar"
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:background="@color/appbar"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        app:contentInsetRight="0dp"
        app:contentInsetEnd="0dp">
        <ImageView
            android:id="@+id/back_activity_button"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:scaleType="center"
            android:src="@drawable/rof_backbutton"
            android:textStyle="bold"
            android:tint="@color/white"


            />

        <LinearLayout
            android:id="@+id/saveshipmenticonintop"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:background="@color/appbar"
            android:orientation="vertical"
            android:padding="@dimen/pin_content_layout_padding">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="15dp"
                android:paddingBottom="0dp"
                android:tint="@color/white" />

        </LinearLayout>

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:fontFamily="@font/poppinsbold"
            android:gravity="center"
            android:text="Uber"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"

            />
    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:paddingTop="50dp"
            android:id="@+id/main">


            <!--  <TextView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:id="@+id/textbox"
                  android:text="Please enter your Bank Account  detail to link with the app"
                  android:layout_marginTop="30dp"
                  android:layout_marginBottom="30dp"

                  android:textAlignment="center"
                  android:textSize="15dp"
                  android:textStyle="bold"
                  android:fontFamily="@font/poppinslight"
                  android:layout_marginLeft="30dp"
                  android:layout_marginRight="30dp"/>
  -->



            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="7dp"
                android:layout_margin="10dp"
                app:cardCornerRadius="15dp"
                >
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ava_user"
                    android:backgroundTint="@color/white"
                    android:hint="Name"
                    android:singleLine="true"
                    android:id="@+id/name"
                    android:inputType="textCapCharacters"
                    android:maxLines="1"
                    style="@style/commonEdittextStyle"
                    />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="7dp"
                android:layout_margin="10dp"
                app:cardCornerRadius="15dp"
                >
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ava_user"
                    android:backgroundTint="@color/white"
                    android:hint="Last Name"
                    android:singleLine="true"
                    android:id="@+id/lname"
                    android:inputType="textCapCharacters"
                    android:maxLines="1"
                    style="@style/commonEdittextStyle"
                    />
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="7dp"
                android:layout_margin="10dp"
                app:cardCornerRadius="15dp"
                >
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/email"
                    android:backgroundTint="@color/white"
                    android:hint="Email"
                    android:singleLine="true"
                    android:id="@+id/email"
                    android:inputType="textCapCharacters"
                    android:maxLines="1"
                    style="@style/commonEdittextStyle"
                    />
            </android.support.v7.widget.CardView>


            <Button
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/proceed"
                android:text="Proceed"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/cornerbutton"
                android:textColor="@color/white"

                />
        </LinearLayout>
    </ScrollView>
</LinearLayout>


