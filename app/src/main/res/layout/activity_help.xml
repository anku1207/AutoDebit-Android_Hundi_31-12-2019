<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Help"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/my_awesome_toolbar"
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:background="@color/appbar"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        app:contentInsetRight="0dp"
        app:contentInsetEnd="0dp"
        >
        <ImageView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:src="@drawable/rof_backbutton"
            android:gravity="center"
            android:textStyle="bold"
            android:scaleType="center"
            android:id="@+id/back_activity_button"
            android:tint="@color/white"
            android:layout_gravity="start"
            android:paddingLeft="10dp"
            />
        <LinearLayout
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:orientation="vertical"
            android:layout_gravity="end"
            android:layout_marginRight="10dp"
            >
            <ImageView

                android:layout_width="25dp"
                android:layout_height="25dp"
                android:gravity="center"
                android:textStyle="bold"
                android:id="@+id/profileedit"
                android:tint="@color/white"/>
        </LinearLayout>
        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:fontFamily="@font/poppinsbold"
            android:gravity="center"
            android:text="Contact Us"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            />
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center|fill_vertical"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical"
        tools:context=".activity.ContactUs">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:src="@drawable/autodebitlogo" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="We are happy to help you! \nOur service hours are 10am to 6pm"
            android:textColor="@color/defaultTextColor"
            android:textSize="17dp"
            android:gravity="center_horizontal"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="48dp"
            android:layout_marginHorizontal="8dp"
            android:weightSum="3">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="24dp"
                android:layout_weight="1"
                android:orientation="vertical"
                >

                    <ImageButton
                        android:id="@+id/contact_request"
                        android:layout_margin="4dp"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:background="@drawable/buttonshape_round_with_icon"
                        android:padding="2dp"
                        android:src="@drawable/phone"
                        android:tint="@color/white"
                        android:layout_gravity="center"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_gravity="bottom"
                        android:text="Request Callback"
                        android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="24dp"
                android:layout_weight="1"
                android:orientation="vertical"
                >

                    <ImageButton
                        android:layout_margin="4dp"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:background="@drawable/buttonshaped_icon_red"
                        android:padding="2dp"
                        android:id="@+id/email"
                        android:src="@drawable/email"
                        android:tint="@color/white"
                        android:layout_gravity="center"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_gravity="bottom|center"
                        android:text="Email"
                        android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="24dp"
                android:layout_weight="1"
                android:orientation="vertical"
                >

                <ImageButton
                    android:layout_margin="4dp"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:background="@drawable/buttonshaped_icon_green"
                    android:padding="2dp"
                    android:src="@drawable/phone"
                    android:tint="@color/white"
                    android:id="@+id/fabCall"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_gravity="bottom"
                    android:text="Call Support"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
