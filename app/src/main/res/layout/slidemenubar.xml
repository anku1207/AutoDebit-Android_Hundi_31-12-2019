<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
  >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/edittext_bottom_line">


        <ImageView
            android:id="@+id/menulayout"
            android:src="@drawable/autodebitlogo"
            android:layout_width="80dp"
            android:layout_height="80dp"

            android:textAlignment="viewStart"

            android:padding="10dp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textAlignment="textEnd"
            android:layout_gravity="end"
            android:gravity="end"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/closemenuactivity"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:paddingEnd="10dp"
                android:src="@drawable/paynimo_cancel_icon"
                android:gravity="end"
                android:fontFamily="@font/poppinsextrabold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:text="Logout"
                android:id="@+id/logoutbtn"
                android:fontFamily="@font/poppinsbold"
                android:layout_marginRight="10dp"
                android:textSize="15dp"/>
        </LinearLayout>



    </LinearLayout>


<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:padding="10dp"
            android:id="@+id/profile"
            android:background="@drawable/edittext_bottom_line"
            android:textColor="@drawable/slidemenutextcolor"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="FAQs"
            android:padding="10dp"
            android:id="@+id/faqs"
            android:background="@drawable/edittext_bottom_line"
            android:textColor="@drawable/slidemenutextcolor"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tram_and_condition"
            android:padding="10dp"
            android:id="@+id/condition"
            android:background="@drawable/edittext_bottom_line"
            android:textColor="@drawable/slidemenutextcolor"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ContactUs"
            android:padding="10dp"
            android:id="@+id/contact"
            android:background="@drawable/edittext_bottom_line"
            android:textColor="@drawable/slidemenutextcolor"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Revoke Utility Services"
            android:padding="10dp"
            android:id="@+id/revoke"
            android:background="@drawable/edittext_bottom_line"
            android:textColor="@drawable/slidemenutextcolor"
            android:visibility="gone"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/app_Version_Code"
            android:layout_marginTop="20dp"
            android:text=""
            android:gravity="center"/>
    </LinearLayout>
</ScrollView>
</LinearLayout>